package days09;

import java.io.IOException;
import java.util.Scanner;

public class Test01 {

	public static void main(String[] args) throws IOException {

		/*int n = 10;
		
		int result = recursiveHap(n);
		
		System.out.println(result);*/
		
		
		String name;
		int kor, eng, mat, tot, rank;
		double avg;
		
		String [] names = new String [30];	
		int [] kors = new int [30];
		int [] engs = new int [30];
		int [] mats = new int [30];
		int [] tots = new int [30];
		int [] ranks = new int [30];
		double [] avgs = new double [30];
		
		Scanner scanner = new Scanner(System.in);
		int count = 0;
		char con = 'y';
		
		do {
			System.out.printf("%d번 학생 이,국,영,수 입력 ? ", count+1);
			
			name = scanner.next();
			kor = scanner.nextInt();
			eng = scanner.nextInt();
			mat = scanner.nextInt();
			tot = kor + eng + mat;
			avg = (double)tot/3;
			rank = 1;
			
			names[count] = name;
			kors[count] = kor;
			engs[count] = eng;
			mats[count] = mat;
			tots[count] = tot;
			avgs[count] = avg;
			ranks[count] = rank;
			
			count ++;
			
			System.out.print("학생 입력 계속 ? ");
			con = (char)System.in.read();
			System.in.skip(System.in.available());
			
		} while (con == 'y' || con == 'Y');
		
		System.out.printf("총 학생 수 : %d\n", count);
		
		for (int i = 0; i < count; i++) {
			System.out.printf("[%d]%s%d%d%d%d%d%.2f", i+1,names[i],kors[i],engs[i],mats[i],tots[i],ranks[i],avgs[i]);
		}
		
		
		
		
		
		
		
		

	} // main

	private static int recursiveHap(int n) {
		
		if (n==1) return n;
		else return n + recursiveHap(n-1);
	}
} // class
