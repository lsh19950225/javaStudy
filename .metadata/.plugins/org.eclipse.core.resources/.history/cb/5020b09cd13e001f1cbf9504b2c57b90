 *							1) Call By Name 이름으로 출력
 *							2) Call By Value 값
 *							3) Call By Reference 참조
 */
public class Ex05 {

	public static void main(String[] args) {
		
		// 메서드 호출
		//drawLine();       // 1) Call By Name
		
		System.out.println( hap(a, b));
		
		
		
		
		
	} // main
	
	// 메서드 선언 부분
	public static int hap(int a, int b) {
		
		return a + b;
	}
	public static void drawLine() {
		System.out.println("----------");
	}
	
} // class
