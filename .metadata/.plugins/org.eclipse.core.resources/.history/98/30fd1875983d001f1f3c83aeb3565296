		for (int i = 1; i <= 5; i++) {
			for (int j = 1; j <= 5; j++) {
				if (i==j) {
					System.out.print("*");
				} else {
					System.out.print("_");
				}
			}
			System.out.println();
		}

		
		for (int i = 1; i <= 5; i++) {
			for (int j = 1; j <= 5; j++) {
				if (i+j==6) {
					System.out.print("*");
				} else {
					System.out.print("_");
				}
			}
			System.out.println();
		}



	} // main

