package days06;

/**
 * @author lsh
 * @date 2024. 7. 8. - 오후 5:08:32
 * @subject 
 * @content
 *
 */
public class Ex09 {

	public static void main(String[] args) {

		for (int i = 1; i <= 4; i++) {
			// System.out.println("****");
			for (int j = 1; j <= 4; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		
		for (int i = 1; i <= 4; i++) {
			
			for (int j = 1; j <= 4; j++) {
				if (j%1 == 1) {
					System.out.print("*");
				} else if (j%1 == 2) {
					System.out.print("**");
				} else if (j%1 == 3) {
					System.out.print("***");
				} else {
					System.out.print("****");
				}
			}
			System.out.println();
		}



	}

}
