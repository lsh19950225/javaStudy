package days07;

public class Test02 {

	public static void main(String[] args) {
		
		int first = 1;
		int second = 2;
		System.out.printf("%d+%d+", first, second);
		
		int next; 
		int sum = first + second;
		for (int i = 1; i <= 8; i++) {
			next = first + second;
			System.out.printf("%d+", next);
			sum += next;
			first = second;
			second = next;
		}
		System.out.printf("=%d", sum);
		
		
		

	} // main


} // class
