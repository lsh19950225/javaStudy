public class Ex05 {

	public static void main(String[] args) {
		
		// 계차수열
		// 1+2+4+7+11+16+22+29 ... 항의 갯수가 20개 까지의 합
		
		int first = 1;
		int second = 2;
		
		int sum = 0;
		
		while (first>21) {
			System.out.printf("%d+", first);
			first++;
			sum+=first;
			System.out.printf("=%d", sum);
		}
		
		
		
		
		

	} // main

} // class
