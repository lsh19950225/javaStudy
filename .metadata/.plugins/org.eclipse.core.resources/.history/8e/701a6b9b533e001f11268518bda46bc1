package days07;

public class Test02 {

	public static void main(String[] args) {
		
		int first = 1;
		int second = 2;
		int sum = first + first + second;
		System.out.printf("%d+%d+%d+", first, first, second);
		
		int next;
		int sum1 = first + second;
		for (int i = 1; i <= 7; i++) {
			next = first + second;
			System.out.printf("%d+", next);
			sum1 += next;
			first = second;
			second = next;
		}
		System.out.printf("=%d", sum);
		
		
		

	} // main


} // class
