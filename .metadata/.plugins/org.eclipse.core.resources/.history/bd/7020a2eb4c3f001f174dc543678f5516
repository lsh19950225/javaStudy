package days09;

public class Ex04_02 {

	public static void main(String[] args) {

		int n =10;                        // 8진수 출력
		int share, reminder;
		
		while (n != 0) {
			share = n/8;
			reminder = n%8;
			
			System.out.printf("%d", reminder);
			n = share; // 몫
		}
		
		
		
		
		
		/*
